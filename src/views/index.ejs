<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="cl-lg-8 my-5">
      <h1 class="text-center">Edilson Massingue</h1>
      <p class="text-center lead">Bem vindo a minha Agenda</p>

      <%- include('includes/messages') %>

      <table class="table table-hover">
        <div class="tbody">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Surname</th>
              <th>Email</th>
              <th colspan="2">Contacto</th>
            </tr>
          </thead>
          <% let i = 1; contact.forEach(contact => { %>
          <tr>
            <td><%- i++ %></td>
            <td><%= contact.nome %></td>
            <td><%= contact.sobrenome %></td>
            <td><%= contact.email %></td>
            <td><a href="/contacto/index/<%= contact._id %>">Editar</a></td>
            <td>
              <a class="text-danger" href="/contacto/delete/<%= contact._id %>"
                >Excluir</a
              >
            </td>
          </tr>
          <% }); %>
        </div>
      </table>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
